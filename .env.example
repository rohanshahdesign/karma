# Supabase
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Authentication Redirect
NEXT_PUBLIC_REDIRECT_TO=http://localhost:3000/auth/callback

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Slack Integration (Optional - Production/HTTPS only)
# Slack OAuth requires HTTPS and public URLs - not available in localhost development
# For local testing: use ngrok or deploy to staging, or set FORCE_SLACK_LOCAL=true
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_REDIRECT_URI=https://your-domain.com/api/auth/slack/callback
# FORCE_SLACK_LOCAL=true  # Uncomment to force Slack in development (advanced)

# Microsoft Teams Integration (Optional)
TEAMS_CLIENT_ID=your-teams-client-id
TEAMS_CLIENT_SECRET=your-teams-client-secret
